{
  "extends": [
    "next/core-web-vitals",
    "pretter",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:tailwindcss/recommended"
  ],

  "rules": {
    "ignorePatterns": ["*.config.js"],

    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],

    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
